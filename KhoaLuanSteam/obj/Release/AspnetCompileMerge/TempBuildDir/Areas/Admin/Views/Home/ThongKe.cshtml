@{
    ViewBag.Title = "ThongKe";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Các biểu đồ thống kê</h1>
    <!-- Content Row -->
    <div class="row">

        <div class="col-xl-6 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Doanh thu của công ty 2023</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
                    </div>
                    <hr>
                    
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Tỉ lệ loại sản phẩm đã được bán của công ty</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4">
                        <canvas id="myChart1" style="width:100%;max-width:600px"></canvas>
                    </div>
                    <hr>
                    
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

<script>
        var thang1 = @Session["thang1"];
        var thang2 = @Session["thang2"];
        var thang3 = @Session["thang3"];
        var thang4 = @Session["thang4"];
        var thang5 = @Session["thang5"];
        var thang6 = @Session["thang6"];
        var thang7 = @Session["thang7"];
        var thang8 = @Session["thang8"];
        var thang9 = @Session["thang9"];
        var thang10 = @Session["thang10"];
        var thang11 = @Session["thang11"];
        var thang12 = @Session["thang12"];
        var xValues = ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12"];
        var yValues = [thang1, thang2, thang3, thang4, thang5, thang6, thang7, thang8, thang9, thang10, thang11, thang12];
        var barColors = ["red", "green", "blue", "orange", "brown", "red", "green", "blue", "orange", "brown", "red", "green"];
        new Chart("myChart", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                legend: { display: false },
                title: {
                    display: true,
                    text: "Danh thu các tháng năm 2023 (VND)"
                }
            }
        });
</script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script>
        var LoaiMamNon = @Session["TileLoaiMamNon"];
        var LoaiCap1 = @Session["TileLoaiC1"];
        var LoaiCap2 = @Session["TileLoaiC2"];
        var LoaiCap3 = @Session["TileLoaiC3"];
        var LoaiKhac = @Session["TileLoaiKhac"];
        var xValues = ["Steam mầm non", "Steam cấp 1", "Steam cấp 2", "Steam cấp 3","Khác"];
        var yValues = [LoaiMamNon, LoaiCap1, LoaiCap2, LoaiCap3, LoaiKhac];
        var barColors = [
            "#b91d47",
            "#00aba9",
            "#2b5797",
            "#e8c3b9",
            "#1e7145"
        ];
        new Chart("myChart1", {
            type: "doughnut",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "Tỉ lệ loại sản phẩm bán chạy nhất"
                }
            }
        });
</script>